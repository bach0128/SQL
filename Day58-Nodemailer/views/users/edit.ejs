<h1>Sửa user tại đây</h1>
<form action="" method="post">
  <label for="name">Name</label>
  <input class="form-control mb-3" type="text" name="name" value="<%= user.name %>" placeholder="<%= user.name %>" />
  <label for="email">Email</label>
  <input class="form-control mb-3" type="text" name="email" value="<%= user.email %>" placeholder="<%= user.email %>"/>
  <div class="mb-3">
    <label for="">Status</label>
    <select name="status" class="form-select">
        <option value="0" <%= !user.status ? "selected" : ""  %>>Chua kich hoat</option>
        <option value="1" <%= !user.status ? "selected" : ""  %>>Kich hoat</option>
    </select>
  </div>

  <div class="mb-3">
    <label for="">Khóa học</label>
    <% courses.forEach(course => { 
      const isChecked = user.courses.find(item => item.id === course.id)
      %>
    <label for="" class="d-block mb-2">
      <input type="checkbox" name="courses" value="<%= course.id %>" <%= isChecked ? 'checked' : '' %>/> <%=
      course.name %>
    </label>
    <% }) %>
  </div>
  
  <button class="btn btn-success">Lưu</button>
  <a href="/users" class="btn btn-danger">Hủy</a>
</form>
